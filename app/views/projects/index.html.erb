<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Projects</h1>
      </div>

      <% if current_user.has_role? :member, User %>
        <div class="table-responsive">  
          <table class = "table table-bordered table-striped">
             <thead>
                <tr>
                   <th></th>
                   <th>Name</th>
                   <th>Description</th>
                   <th>No. Documents</th>
                   <th>Actions</th>
                </tr>
             </thead>
             <tbody>
                <% if @projects.size == 0 %>
                  <tr>
                    <td></td>
                    <td></td>
                    <td align="center">No projects yet</td>
                    <td></td>
                  </tr>
                <% else %>
                  <div class="projects">
                    <% @projects.each do |project| %>
                      <%= render :partial => 'project', :object => project %>
                    <% end %>
                  </div>
                <% end %>
             </tbody>
          </table>
        </div>

        <p align="center">
          <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
        </p>
      <% end %>
    </div>
  </div>
</div>  