<%= form_for @task, :url => edit_task_path(@task), :html => {:method => :post} do |f| %>
  <div class="actions">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :acceptance_condition %>
      <%= f.text_area :acceptance_condition, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :priority %>
      <%= f.text_field :priority, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :effort %>
      <%= f.select :effort, @efforts, :selected => @task.effort %>
    </div>

    <div class="form-group">
      <%= f.label :sprint %>
      <%= select_tag "sprint_id", options_from_collection_for_select(@available_sprints, "id", "name") %>
    </div>

    <%= hidden_field_tag :id, @project.id %>
    <%= hidden_field_tag :user_story_id, @task.id %>

    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>

    <div class="form-group">
      <%= link_to 'Close', {controller: "projects", action: "close_popup"},
      remote: true, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>