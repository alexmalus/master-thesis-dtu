<% if current_user.has_role? :member, @project %>	

	<%= render :partial => 'sidebar', :object => @project %>

	<div class="container-fluid">
	  <div class="row">
	    <div class="col-lg-12">
	      <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Scrum Menu</a>

				<div class="page-header">
					<h2>Create/organize Sprints and Releases</h2>
				</div>

				<div id="flash"></div>

				<div class="project_popup"></div>

				<input type='button' id='sprint_hideshow' value='Sprints'>
				<div class="sprints">
					<%= render :partial => 'sprints/sprints', :object => @sprints, locals: {project_id: @project.id} %>
				</div>

				<br>

				<input type='button' id='release_hideshow' value='Releases'>
				<div class="releases">
					<%= render :partial => 'releases/releases', :object => @releases, locals: {project_id: @project.id} %>
				</div>
	    </div>
	  </div>
	</div>

<% end %> 

<script type="text/javascript">
		$(".project_popup").hide();
		$('#releases_content').hide();
  	$('#sprints_content').hide();
</script> 