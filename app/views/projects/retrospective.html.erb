<% if current_user.has_role? :member, @project %>	

	<%= render :partial => 'sidebar', :object => @project %>

	<div class="container-fluid">
	  <div class="row">
	    <div class="col-lg-12">
	      <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Scrum Menu</a>

				<div id="flash"></div>

				<div class="page-header">
					<h2>Retrospective</h2>
				</div>

				<br>
				<div class="retrospective_form">
					<% if !defined? @retrospective %>
						<h2>
							Sprint is still in progress/finished. Come back when it is done.<hr>
						</h2>
					<% else %>
						<% if current_user.has_role? :scrum_master, @project %>	
							<%= render :partial => 'retrospectives/form', :retrospective => @retrospective  %>
						<% end %>
					<% end %>
				</div>

				<div class="retrospectives">
		      <% if current_user.has_role? :member, User %>
						<%= render :partial => 'retrospectives/retrospectives' %>
	        <% end %>
				</div>

				<br>

	    </div>
	  </div>
	</div>

<% end %>