<% if current_user.has_role? :member, project %>
  <tr>
    <td align=center>
      <%#= image_tag project.image_url(:thumb) %>
      <%= attachment_image_tag(project, :image, :fill, 80, 80) %>
    </td>
    <td><%= project.name %></td>
    <td><%= project.description[0,20] %></td>
    <td><%= project.documents.size %></td>
    <td>
        <%= link_to 'View Project',  project_path(project), class: "btn btn-primary" %>
      <% if current_user.has_role? :product_owner, project %>
        <%= link_to 'Destroy',  project_path(project) , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        <!-- TODO -->
        <%#= link_to 'Change Ownership', {:action => :change_ownership, :project_id => project.id}, class: "btn btn-primary" %>
      <% end %>
    </td>
  </tr>
<% end %>