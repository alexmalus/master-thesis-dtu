<h4>Sprint Tasks</h4><hr>
<% if @tasks.empty? %>
		No available tasks yet..
<% else %>
	<div class="table-responsive">  
		<table class = "table table-bordered table-striped">
		  <thead>
	     <tr>
	        <th>Name</th>
	        <th>Priority</th>
	        <th>Effort</th>
	        <th>Description</th>
	        <th>Condition of acceptance</th>
	        <th>Belongs</th>
	        <th>Actions</th>
	     </tr>
		  </thead>
		  <tbody>
				<% @tasks.each do |task| %>
					<%= render :partial => 'user_stories/sprint_task', locals: {user_story: task} %>
				<% end %>
			</tbody>
		</table>
	</div>
<% end %>
