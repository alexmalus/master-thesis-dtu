<div class="box">
	<div class="box-header">
		<div class="box-title pull-left">
      <h4>Available tasks</h4>
    </div>
  </div>
  <div class="box-content">
		<% if @free_tasks.empty? %>
			<h4>No available tasks yet..</h4><br>
		<% else %>
			<% @free_tasks.each do |task| %>
				<%= render :partial => 'user_stories/free_task', locals: {task: task} %>
			<% end %>
		<% end %>
  </div>
	<!--end: BOX CONTENT-->
</div>
<!--end: BOX-->