<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
			<div class="page-header">
				<h1>Write on this form and we will get on touch!</h1>
			</div>

			<%= form_tag do%>
				<% if @user_feedback.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@user_feedback.errors.count, "error") %> prohibited this form from being saved:</h2>

			      <ul>
			      <% @user_feedback.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="form-group">
				  <%= label_tag 'What is your name?' %>
				  <%= text_field_tag 'name', @user_feedback.name, autofocus: true, class: 'form-control' %>
				</div>

				<div class="form-group">
				  <%= label_tag 'How do we contact you?' %>
				  <%= text_field_tag 'contact_info', @user_feedback.contact_info, class: 'form-control' %>
				</div>

				<div class="form-group">
				  <%= label_tag 'What is your concern?' %>
				  <%= text_area_tag 'description', @user_feedback.description, class: 'form-control' %>
				</div>

			  <%= submit_tag "submit", :class => "btn btn-primary" %>
			<% end %>
    </div>
  </div>
</div>  